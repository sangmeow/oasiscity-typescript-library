{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "files": {
    "include": ["src/**/*.{ts,tsx,js,jsx}"],
    "ignore": ["src/_libs"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
